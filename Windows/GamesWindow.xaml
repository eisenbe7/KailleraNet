<Window x:Class="KailleraNET.Windows.GamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Games" Height="322" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="478*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="238*" />
            <RowDefinition Height="45*" />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="True" HorizontalAlignment="Stretch" Name="gameDataGrid" VerticalAlignment="Stretch" Width="Auto" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Background="#FFFFCBCB" IsReadOnly="True" SelectionMode="Single" Grid.ColumnSpan="2" />
        <Button Content="Create Chat" HorizontalAlignment="Stretch" Name="createChatButton" VerticalAlignment="Stretch" Width="Auto" Grid.Row="1" Click="createChatButton_Click" />
    </Grid>
</Window>
