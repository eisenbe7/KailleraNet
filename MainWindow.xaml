<Window x:Class="KailleraNET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Window" Height="228" Width="494" Name="Connection" Background="Blue" Foreground="Green" WindowStyle="ThreeDBorderWindow" ResizeMode="CanResize" AllowsTransparency="False" AllowDrop="False" SizeToContent="Width">
    <Grid Height="320" Width="511">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="288*" />
            <ColumnDefinition Width="215*" />
        </Grid.ColumnDefinitions>
        <Button Content="Connect To Server" Height="37" HorizontalAlignment="Left" Margin="146,133,0,0" Name="button1" VerticalAlignment="Top" Width="220" Click="button1_Click" Grid.ColumnSpan="2" />
        <TextBox Height="30" HorizontalAlignment="Left" Margin="110,12,0,0" Name="textBox1" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2" DataContext="{Binding}" />
        <TextBox Height="30" HorizontalAlignment="Left" Margin="110,82,0,0" Name="textBox2" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2" />
        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="24,14,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Server" Height="28" HorizontalAlignment="Left" Margin="24,84,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</Window>
